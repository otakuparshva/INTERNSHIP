{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/static/$1"
    },
    {
      "src": "/(.*).(ico|png|jpg|jpeg|gif|svg|json|txt)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1.$2"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://ai-recruitment-backend.onrender.com/api",
    "NODE_ENV": "production"
  }
} 