{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/logo192.png",
      "dest": "/logo192.png"
    },
    {
      "src": "/logo512.png",
      "dest": "/logo512.png"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://recruitment-app-backend.onrender.com",
    "REACT_APP_AWS_REGION": "ap-south-1",
    "REACT_APP_AWS_BUCKET_NAME": "resume.selector.bucket",
    "REACT_APP_NAME": "AI Recruitment System",
    "REACT_APP_VERSION": "1.0.0",
    "REACT_APP_ENVIRONMENT": "development",
    "REACT_APP_ENABLE_ANALYTICS": "false",
    "REACT_APP_ENABLE_NOTIFICATIONS": "true"
  }
} 